<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProcessingImages.RenyiPage"
             Title="RenyiPage">
    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">
        <Image
            x:Name="label2"
            SemanticProperties.Description="Image of the crystal"
            HorizontalOptions="Center" />
        <StackLayout Spacing="5" Orientation="Horizontal" HorizontalOptions="Center" >
            <StackLayout Padding="8">
                <Label x:Name="DrugName" Text="Напишите название препарата" FontSize="14" />
                <Entry Placeholder="Название препарата"
                       WidthRequest="200"
                       x:Name="Entry_DrugName"/>
            </StackLayout>
            <StackLayout Padding="8">
                <Label x:Name="Increase" Text="Выберите увеличение микроскопа" FontSize="14" />
                <Picker x:Name="IncreasePicker" WidthRequest="200">
                    <Picker.Items>
                        <x:String>40x</x:String>
                        <x:String>100x</x:String>
                    </Picker.Items>
                </Picker>
            </StackLayout>            
        </StackLayout>
        <Button x:Name="MethodButton" Text="Получить результаты" Clicked="OnMethodClicked"/>
    </VerticalStackLayout>
</ContentPage>